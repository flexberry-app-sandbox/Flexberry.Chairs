<h3 class="ui header">{{t "forms.i-i-s-chairs-chair-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.serialNumber
      class=(if (v-get validationObject "serialNumber" "isInvalid") "error")
      label=(t "forms.i-i-s-chairs-chair-e.serialNumber-caption")
      data-test-i-i-s-chairs-chair-e-serialNumber=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "serialNumber" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-chairs-chair-e.chairType-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.chairType
      class=(if (v-get validationObject "chairType" "isInvalid") "error")
      displayAttributeName="name"
      autocomplete=true
      relationName="chairType"
      projection="ChairTypeL"
      title=(t "forms.i-i-s-chairs-chair-e.chairType-caption")
      readonly=readonly
      componentName="chairTypeLookup"
      class=(if (v-get validationObject "chairType" "isInvalid") "error")
      data-test-i-i-s-chairs-chair-e-chairType=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "chairType" "message")}}
  </div>

  <div class="field">
    <label>{{t "forms.i-i-s-chairs-chair-e.chairLeg-caption"}}</label>
    {{flexberry-groupedit
      componentName="chairLegGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.chairLeg
      content=model.chairLeg
      readonly=readonly
      orderable=false
      class=(if (v-get validationObject "chairLeg" "isInvalid") "error")
      data-test-i-i-s-chairs-chair-e-chairLeg=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "chairLeg" "message")}}
  </div>
</form>